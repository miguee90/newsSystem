<!--FACEBOOK COMMENTS-->
<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/es_LA/sdk.js#xfbml=1&version=v2.8";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

<header>
	<ng-include src="'views/includes/menuNoClima.ejs'"></ng-include>
</header>
<main>
	<div class="row" style="margin:-20px 0px 0px 0px;">
		<div class="col-lg-12 notaP" ng-style="backImage">
			<div class="smoke">
				<img style="margin-top:40px;" class="col-lg-4 col-lg-offset-1" alt="logo global" src="images/common/logo-globalWhite.png">
				<a href="https://www.facebook.com/GlobalMediaSLP/?fref=ts">
					<img style="margin-top:90px;" class=" col-lg-offset-5" alt="logo facebook" src="images/common/facebook-white.png">
				</a>
				<a href="https://twitter.com/globalmediamx">
					<img style="margin-top:90px;" class="" alt="logo twitter" src="images/common/twitter-white.png">
				</a>
				<a href="https://www.youtube.com/channel/UCqF55I3fwX8fs0AEgaIvNQQ">
					<img style="margin-top:90px;" class="" alt="logo youtube" src="images/common/youtube-white.png">
				</a>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-10 col-lg-offset-1">
			<!--SECCION IZQUIERDA-->
			<div class="col-lg-8">
				<h2 id="titulo">{{completo.nota.titulo}}</h2>
				<h5 id="fecha">{{completo.nota.fecha_inicio | date: 'dd-MM-yyyy HH:mm'}}</h5>
				<div class="col-lg-12 cuerpo" ta-bind ng-model="completa">
				</div>
				<div class="col-lg-12">
					<div id="fb-comment-box" fbcomment
							page-href="http://localhost:3000/#/Nota/{{pageId}}"
							numposts="5"
							colorscheme="light">
					</div>
				</div>
			</div>
			<!--SECCION DERECHA-->
			<div class="col-lg-4" style="padding-top:60px;">
				<div class="col-lg-12" style="padding:0px;">
					<h4 class="tittle-tema" ng-style="backColor">+ SOBRE EL TEMA</h4>
					<a ui-sref="noticia({id: not.nota.alias})" ng-repeat="not in sobreTema">
						<div class="col-lg-12" style="margin-top:20px; padding:0px;">
							<div class="col-lg-4" style="padding:0px;">
								<img alt="thumb" class="co-lg-4 img-responsive" ng-src="images/multimedia/{{not.imagen.imagenPortada}}">
							</div>
							<div class="col-lg-8">
								<h5 style="color:black;">{{not.nota.titulo}}</h5>
								<p class="seccion col-lg-8">{{not.seccion.nombre}}</p>
							</div>
						</div>
					</a>
				</div>
				<div style="margin-top:20px;" class="col-lg-12 almomento">
					<h4 style="border-bottom: 1px solid #bfbfbf;">AL MOMENTO</h4>
					<a href="#" ng-repeat="nota in almomento">
						<p style="border-bottom: 1px solid #bfbfbf;"><span style="color:#fea53f;">{{nota.fecha_inicio | date:' HH:mm'}}</span> {{nota.resumen}}</p>
					</a>
				</div>
				<div style="cursor:pointer; margin-top:40px; padding:0px;" class="col-lg-12" ui-sref="Trafico.Mapa">
					<img alt="trafico" class="img-responsive" src="images/common/trafico.jpg">
				</div>
				<div class="col-lg-12" style="padding:0px;">
					<h4 class="tittle-tema" ng-style="backColor">GLOBAL RECOMIENDA</h4>
					<a ui-sref="noticia({id: not.nota.alias})" ng-repeat="not in destacados">
						<div class="col-lg-12" style="margin-top:20px; padding:0px;">
							<div class="col-lg-4" style="padding:0px;">
								<img alt="thumb" class="co-lg-4 img-responsive" ng-src="images/multimedia/{{not.img[0].imagenPortada}}">
							</div>
							<div class="col-lg-8">
								<h5 style="color:black;">{{not.nota.titulo}}</h5>
								<p class="seccion col-lg-8">{{not.seccion.nombre}}</p>
							</div>
						</div>
					</a>
				</div>
			</div>
		</div>
	</div>
</main>
<footer>
	<ng-include src="'views/includes/footer.ejs'"></ng-include>
</footer>